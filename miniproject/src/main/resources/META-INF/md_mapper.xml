<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="md.MDMapper">

<!-- 전체 데이터 출력 -->
<select id="select_allmd" resultType="mdDTO">
select * from md_notice order by md_idx desc
</select>

<!-- 데이터 1개 출력 -->
<select id="select_onemd" resultType="mdDTO" parameterType="int">
select * from md_notice where md_idx=#{md_idx}
</select>

<!-- 조회수 증가 -->
<update id="update_mdviews" parameterType="int">
update md_notice set nviews=nviews+1 where md_idx=#{md_idx}
</update>

</mapper>